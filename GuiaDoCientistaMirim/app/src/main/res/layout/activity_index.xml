<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/container"
    tools:context=".Index">

    <LinearLayout
        style="@style/linear_vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linear_index">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frasco"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    style="@style/info"
                    android:id="@+id/txt_start"
                    android:text="Bem vindo!"/>

                <View style="@style/horizontal_line"></View>

                <TextView
                    style="@style/title"
                    android:text="@string/subtitle_index"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/link"
            android:text="1. Abajur de lava de Gênio do Mal"
            android:onClick="irLicao1"/>

        <TextView
            style="@style/link"
            android:text="2. Calculadora de batatas"
            android:onClick="irLicao2"/>

        <TextView
            style="@style/link"
            android:text="3. Ferrofluido (ouriço metálico)"
            android:onClick="irLicao3"/>

        <TextView
            style="@style/link"
            android:text="4. Motor elétrico mais simples da galáxia"
            android:onClick="irLicao4"/>

        <TextView
            style="@style/link"
            android:text="5. Produção de Hidrogênio (Eletrólise da água)"
            android:onClick="irLicao5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="abrirEChat">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBtnMenu"
                    android:src="@drawable/chat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/eChat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="mostrarCuriosidade">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBtnMenu"
                    android:src="@drawable/atomo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/curiosity"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>